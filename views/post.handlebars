<div class="post-container">
  <div class="post-title">
    <h2>{{title}}</h2>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <h3 class="description">{{description}}</h3>
  
    {{!-- <p>{{}}</p> --}}
  
  {{#if comment.length}}
    <div>
      <p>{{comment.description}}</p>
      <p>{{comment.user.name}}, {{format_date comment.date_created}}</p>
    </div>
  {{/if}}

  <div class="post-container">
    <form class="comment-form">
      <div>
        <input type="hidden" name="post-id" value="{{id}}" />
        <label for="comment-desc">Comment here!</label>
        <input class="comment-description" id="comment-desc" name="comment-desc"></input>
      </div>
      <div>
        <button class="submit-button" type="submit">Comment</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/comment.js"></script>