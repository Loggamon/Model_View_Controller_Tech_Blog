<div>
  <h2>{{name}}'s Dashboard</h2>
</div>

<div>
  <div>
    <h3>Create A Post!</h3>

    <form class="new-post-form">
      <div>
        <label for="post-title">Title:</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div>
        <label for="post-desc">Description:</label>
        <textarea id="post-desc" name="post-desc"></textarea>
      </div>
      <div>
        <button type="submit">Post</button>
      </div>
    </form>

  {{#if posts.length}}
  <div class="post-list">
    <h3>Your Posts:</h3>

    {{#each posts as |post|}}
    <div>
      <div>
        <h2>{{post.title}}</h2>
        <h3>{{post.description}}</h3>
        <h4>{{format_date post.date_created}}</h4>
      </div>
      <div>
        <button data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dash.js"></script>